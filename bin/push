if [ ! -f "Alicefile" ]; then
  echo "[ERROR] Unable to find 'Alicefile' in ${PWD}"
  exit 1
fi
if [ ! -d "alice" ]; then
  echo "[ERROR] Unable to find 'alice/' *.yaml files in ${PWD}"
  exit 1
fi
cd $1
if [ -z "$alicefileinclude" ]; then
  alicefileinclude=0
  . Alicefile
fi
CMD="push" # <--- Change this
echo "[$CMD]"
############################################################################
FQ="$REPO/$NAME:$TAG"
FQSHA="$REPO/$NAME:$SHA"
echo $FQ
docker push $FQ
docker push $FQSHA